<h2><%= @range %>s search for "<%= @word %>" </h2>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
  <thead>
    <tr>
      <th></th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <%= link_to user_path(user) do %>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  <% else %>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to(book.user) do %>
            <%= image_tag book.user.get_profile_image(100,100) %>
            <% end %>
          </td>
          <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
          <td><%= book.body %></td>
          </tr>
      <% end %>
    </tbody>
  <% end %>
</table>