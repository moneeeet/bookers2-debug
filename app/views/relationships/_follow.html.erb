<thead>
  <% if @users.exists? %>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th></th>
      </tr>
</thead>
<tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%= user.name %></td>
      <td>フォロー数: <%= user.followings.count %></td>
      <td>フォロワー数: <%= user.followers.count %></td>
      <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
    </tr>
</tbody>
      <% end %>
      <% else %>
      <p>ユーザーはいません</p>
      <% end %>